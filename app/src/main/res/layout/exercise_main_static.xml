<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="360dp"
        android:layout_height="500dp"
        android:layout_gravity="center"
        >

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/sets_exit_button_static"
            android:layout_width="@dimen/fabsize"
            android:layout_height="@dimen/fabsize"
            android:src="@drawable/closecross"
            android:layout_alignRight="@+id/linlayout_ex_static"
            android:layout_alignTop="@+id/linlayout_ex_static"
            android:layout_marginRight="@dimen/fabsize_half_negative"
            android:layout_marginTop="@dimen/fabsize_half_negative"
            />

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_centerInParent="true"
    android:background="@color/colorWhite"
    android:id="@+id/linlayout_ex_static"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="20dp"
    android:paddingTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="blaa"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:id="@+id/workout_name_in_ex_static"
            android:textStyle="bold"
            android:layout_weight="1"
            android:gravity="center"/>

    <ListView
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:id="@+id/listview_sets_static"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:layout_weight="10"
        android:layout_gravity="center">
    </ListView>

</LinearLayout>

    </RelativeLayout>

</FrameLayout>

