<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/fab_margin"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="blaa"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:id="@+id/workout_name_in_ex_static"
            android:textStyle="bold"
            android:layout_weight="1"
            android:gravity="center_horizontal"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/sets_exit_button_static"
            android:layout_width="@dimen/fabsize"
            android:layout_height="@dimen/fabsize"
            android:src="@drawable/closecross"
            android:layout_gravity="right|center"
            android:layout_marginRight="18dp"
            />
    </LinearLayout>

<LinearLayout
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/multiRowMargin"
    android:layout_gravity="center"
    >
    <ListView
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:id="@+id/listview_sets_static"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:layout_weight="50">
    </ListView>
</LinearLayout>




</LinearLayout>

